<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book_view_form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="price" />
                            <field name="web" />
                            <field name="author"
                                widget="many2one_tags" />
                        </group>

                        <group>
                            <field name="edition" />
                            <field name="format" />
                            <field name="purchase" />
                            <field name="purchase_date" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">library.book.view.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="price" />
                <field name="web" />
                <field name="author"
                    widget="many2one_tags" />
            </tree>
        </field>
    </record>

    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">Library Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Empieza creando un libro
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->

            </p>
        </field>
    </record>

    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">library.book.view.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="">
                <group expand="1" string="Group By">
                    <filter string="Author" name="author" context="{'group_by':'author'}"/>
                </group>
                <filter name="filter_author" string="filter_author" domain="[]" context="{'group_by': 'author'}" />
                <!-- <filter name="filter_gender" string="filter_gender" domain="[]" context="{'group_by': 'gender'}" /> -->
            </search>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="library_book_menu_act" name="Library Books" action="library_book_action"
        sequence="10" />


</odoo>